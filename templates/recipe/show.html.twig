{% extends 'base.html.twig' %}

{% block body %}

<h1>{{ recipe.title}}</h1>

<p>{{recipe.ingredients}}</p>

<p>{{recipe.content}}</p>

<p>le {{recipe.date | date('d/m/Y')}} à {{recipe.date | date('H:i')}} dans la catégorie {{recipe.category}}</p>

<a href="{{path('edit', {'id': recipe.id}) }}" class="btn btn-success">Modifier</a>
<a href="{{path('delete', {'id': recipe.id}) }}" class= "btn btn-primary" onclick="return confirm('Voulez-vous vraiment supprimer cette recette ?')">Supprimer</a>
{% endblock %}